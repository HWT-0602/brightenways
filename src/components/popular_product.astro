---
import ProductDetail from "./product_detail/product_detail";
---

<div class="popular_product" id="Product">
    <div class="max">
        <div class="underline_title underline_title_Y">
            <h2>賽鴿保健品</h2>
        </div>

        <ProductDetail client:load />
    </div>

    <style>
        .popular_product {
            scroll-margin-top: 72px;
            padding-top: 82px;
            width: 100%;
        }
        .max {
            align-content: center;
            padding-left: 67px;
            padding-right: 67px;
            padding-bottom: 82px;
        }

        @media (max-width: 767px) {
            .popular_product {
                padding-top: 0;
            }

            .max {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin-top: 40px;
                padding-bottom: 0;
                padding-left: 20px;
                padding-right: 20px;
                height: auto;
            }
        }
    </style>
</div>
