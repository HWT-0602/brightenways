        width: 40%;
        max-width: 402px;
    }

    @media (max-width: 767px) {
        .col_line {
            display: none;
        }
        .row_line {
            width: unset;
        }
        .max {
            flex-direction: column;
            padding-left: 20px;
            padding-right: 20px;
        }
        .info {
            margin-right: auto;
            margin-left: auto;
            width: unset;
            max-width: unset;
        }
        .footer_logo {
            width: 100%;
