<style>
    .footer {
        background-color: rgba(78, 56, 34, 10%);
    }

    .max {
        display: flex;
        padding-top: 78px;
        padding-bottom: 31px;
        padding-left: 54px;
        padding-right: 76px;
        align-items: center;
        text-align: center;
        justify-content: space-around;
        gap: 56px;
    }

    .info {
        max-width: 402px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .col_line {
        width: 2px;
        height: 100px;
        background-color: #4e382240;
    }

    .row_line {
